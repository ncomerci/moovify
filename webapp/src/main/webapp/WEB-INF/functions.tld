<?xml version="1.0" encoding="UTF-8" ?>
<taglib
        xmlns="http://java.sun.com/xml/ns/javaee"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-jsptaglibrary_2_1.xsd"
        version="2.1">

    <display-name>Custom Functions</display-name>
    <tlib-version>1.0</tlib-version>
    <short-name>customTag</short-name>
    <uri>http://www.paw.itba.edu.ar/moovify/tags</uri>

    <function>
        <name>descendantCount</name>
        <function-class>ar.edu.itba.paw.models.Comment</function-class>
        <function-signature>int getDescendantCount(ar.edu.itba.paw.models.Comment,long)</function-signature>
    </function>

    <function>
        <name>getCommentLikeValue</name>
        <function-class>ar.edu.itba.paw.models.Comment</function-class>
        <function-signature>int getLikeValue(ar.edu.itba.paw.models.Comment,ar.edu.itba.paw.models.User)</function-signature>
    </function>

    <function>
        <name>getPostLikeValue</name>
        <function-class>ar.edu.itba.paw.models.Post</function-class>
        <function-signature>int getLikeValue(ar.edu.itba.paw.models.Post,ar.edu.itba.paw.models.User)</function-signature>
    </function>

    <function>
        <name>hasUserBookmarkedPost</name>
        <function-class>ar.edu.itba.paw.models.User</function-class>
        <function-signature>boolean hasUserBookmarkedPost(ar.edu.itba.paw.models.User,ar.edu.itba.paw.models.Post)</function-signature>
    </function>

    <function>
        <name>hasUserFollowed</name>
        <function-class>ar.edu.itba.paw.models.User</function-class>
        <function-signature>boolean hasUserFollowed(ar.edu.itba.paw.models.User, ar.edu.itba.paw.models.User)</function-signature>
    </function>

    <function>
        <name>hasDescription</name>
        <function-class>ar.edu.itba.paw.models.User</function-class>
        <function-signature>boolean hasDescription(ar.edu.itba.paw.models.User)</function-signature>
    </function>
</taglib>
